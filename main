import flet as ft
def main(page:ft.Page):
    page.window.width=800
    page.window.height=700
    page.window.left=300
    page.window.top=10
    page.theme_mode=ft.ThemeMode.SYSTEM
    page.add(
        ft.Row([ft.Text("Wlecome M.r Hcaker",size="50",color=ft.colors.BLACK87)],ft.MainAxisAlignment.CENTER),
        ft.Row([ft.TextField(label="Enter ip address",icon=ft.icons.ADD_REACTION_SHARP,width=400,color=ft.colors.WHITE,text_size='20',bgcolor=ft.colors.BLUE_ACCENT_700,border_radius=20)],ft.MainAxisAlignment.CENTER),
    )
    page.update()

ft.app(target=main)
    
